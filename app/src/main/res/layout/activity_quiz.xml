<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".quiz.controllers.QuizController">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quiz_controller_instructions"
        android:id="@+id/libraryContactNetworkNotifiedMessage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cravingsLevelSlider"
        android:layout_below="@+id/libraryContactNetworkNotifiedMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp"
        android:max="9"
        android:indeterminate="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz_controller_go"
        android:id="@+id/btn"
        android:layout_below="@+id/cravingsLevelSlider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:onClick="handleSubmitQuizClick"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quiz_score_range_mild"
        android:id="@+id/textView10"
        android:layout_below="@+id/cravingsLevelSlider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quiz_score_range_moderate"
        android:id="@+id/textView11"
        android:layout_below="@+id/cravingsLevelSlider"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quiz_score_range_severe"
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignRight="@+id/cravingsLevelSlider"
        android:layout_alignEnd="@+id/cravingsLevelSlider"/>
</RelativeLayout>
